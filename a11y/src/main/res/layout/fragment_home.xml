<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_appbar" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/topSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="8dp"
                    android:text="Scenes"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/t_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Banner" />

                <Button
                    android:id="@+id/t_modal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modal" />

                <Button
                    android:id="@+id/t_fullscreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fullscreen" />

                <Button
                    android:id="@+id/t_story"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Story" />

                <Button
                    android:id="@+id/t_survey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Survey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Messages"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="8dp"/>

                <Button
                    android:id="@+id/iaa_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Banner"/>

                <Button
                    android:id="@+id/iaa_modal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modal"/>

                <Button
                    android:id="@+id/iaa_fullscreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fullscreen"/>

                <Button
                    android:id="@+id/iaa_html"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HTML"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
