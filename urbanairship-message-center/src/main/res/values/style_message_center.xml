<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--- MESSAGE CENTER -->

    <!-- Base style for Message Center and Message Activities -->
    <style name="UrbanAirship.MessageCenter.Activity" parent="Theme.AppCompat.DayNight">
    </style>

    <!-- Item Container -->
    <style name="Widget.UrbanAirship.MessageCenter.Item.Container" parent="Base.Widget.UrbanAirship.MessageCenter.Item.Container" />

    <style name="Base.Widget.UrbanAirship.MessageCenter.Item.Container" parent="">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">16dp</item>>
    </style>

    <!-- Item CheckBox -->
    <style name="Widget.UrbanAirship.MessageCenter.Item.CheckBox" parent="Base.Widget.UrbanAirship.MessageCenter.Item.CheckBox" />

    <style name="Base.Widget.UrbanAirship.MessageCenter.Item.CheckBox" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- Item Icon -->
    <style name="Widget.UrbanAirship.MessageCenter.Item.Icon" parent="Base.Widget.UrbanAirship.MessageCenter.Item.Icon" />

    <style name="Base.Widget.UrbanAirship.MessageCenter.Item.Icon" parent="">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:src">@drawable/ua_ic_image_placeholder</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Item Title -->
    <style name="Widget.UrbanAirship.MessageCenter.Item.Title" parent="Base.Widget.UrbanAirship.MessageCenter.Item.Title" />

    <style name="Base.Widget.UrbanAirship.MessageCenter.Item.Title" parent="android:TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:maxLines">2</item>
    </style>

    <!-- Item Date -->
    <style name="Widget.UrbanAirship.MessageCenter.Item.Date" parent="Base.Widget.UrbanAirship.MessageCenter.Item.Date" />

    <style name="Base.Widget.UrbanAirship.MessageCenter.Item.Date" parent="android:TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Message Center Style-->
    <style name="MessageCenter.Item.Title.TextAppearance" parent="@android:style/TextAppearance.Medium" />

    <style name="MessageCenter.Item.Date.TextAppearance" parent="@android:style/TextAppearance.Small" />

    <style name="MessageCenter.EmptyMessage.TextAppearance" parent="@android:style/TextAppearance.Small" />

    <style name="MessageCenter.MessageNotSelected.TextAppearance" parent="@android:style/TextAppearance.Small" />


    <style name="MessageCenter">
        <item name="messageNotSelectedText">@string/ua_message_not_selected</item>
        <item name="messageNotSelectedTextAppearance">
            @style/MessageCenter.MessageNotSelected.TextAppearance
        </item>

        <item name="messageCenterItemTitleTextAppearance">
            @style/MessageCenter.Item.Title.TextAppearance
        </item>
        <item name="messageCenterItemDateTextAppearance">
            @style/MessageCenter.Item.Date.TextAppearance
        </item>
        <item name="messageCenterEmptyMessageTextAppearance">
            @style/MessageCenter.EmptyMessage.TextAppearance
        </item>
        <item name="messageCenterItemIconEnabled">false</item>
        <item name="messageCenterEmptyMessageText">@string/ua_empty_message_list</item>
        <item name="messageCenterItemBackground">@drawable/ua_item_mc_background</item>
    </style>


</resources>