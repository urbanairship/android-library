<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Message Center Panes -->
    <dimen name="message_center_list_pane_width">360dp</dimen>
    <dimen name="message_center_message_pane_width">480dp</dimen>

    <!-- Message List pane vertical divider -->
    <!-- Shown between the list and the message view in two-pane mode -->
    <dimen name="message_list_vertical_divider_size">1dp</dimen>

    <!-- Message List scrollbar thickness -->
    <dimen name="message_list_scrollbar_size">4dp</dimen>

    <!-- Message List Item -->
    <!-- Space above the first item in the list. -->
    <dimen name="message_list_item_spacing_top">8dp</dimen>
    <!-- Space between items in the list. -->
    <dimen name="message_list_item_spacing_middle">0dp</dimen>
    <!-- Space below the last item in the list. -->
    <dimen name="message_list_item_spacing_bottom">8dp</dimen>

    <!-- Message List Item dividers -->
    <dimen name="message_item_divider_inset_start">102dp</dimen>
    <dimen name="message_item_divider_inset_end">16dp</dimen>

    <!-- Message Item Thumbnail -->
    <dimen name="message_item_thumbnail_width">64dp</dimen>
    <dimen name="message_item_thumbnail_height">64dp</dimen>
    <dimen name="message_item_thumbnail_margin_start">12dp</dimen>

    <!-- Message Item Checkbox -->
    <!-- Shown in the thumbnail or at the start of the message list item -->
    <dimen name="message_item_checkable_no_thumbnail_size">24dp</dimen>
    <dimen name="message_item_checkable_icon_size">36dp</dimen>

    <!-- Message Item unread indicator -->
    <dimen name="message_item_unread_indicator_size">14dp</dimen>
    <dimen name="message_item_unread_indicator_offset">4dp</dimen>
    <dimen name="message_item_unread_indicator_offset_negative">-4dp</dimen>
    <dimen name="message_item_unread_indicator_offset_half">2dp</dimen>

    <!-- Vertical space between the lines of text in the message list item -->
    <dimen name="message_item_text_vertical_gap">2dp</dimen>

</resources>
