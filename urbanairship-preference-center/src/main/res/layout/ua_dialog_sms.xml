<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ua_item_sms_prompt"
    style="@style/UrbanAirship.PreferenceCenter.Item.Alert"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/UrbanAirship.PreferenceCenter.Item.AlertContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ua_dialog_sms_title"
            style="@style/UrbanAirship.PreferenceCenter.Item.AlertTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Notifications are turned off" />

        <TextView
            android:id="@+id/ua_dialog_sms_body"
            style="@style/UrbanAirship.PreferenceCenter.Item.AlertDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="You will not receive any notifications from this app." />

        <LinearLayout
            android:id="@+id/phoneNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/ua_dialog_sms_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ua_dialog_sms_text_input"
                style="@style/UrbanAirship.PreferenceCenter.Item.EditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="9"
                android:hint="Phone number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ua_dialog_sms_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="255"
                    android:maxLines="1"
                    android:singleLine="true"
                    tools:text="Phone number" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/ua_dialog_sms_footer"
            style="@style/UrbanAirship.PreferenceCenter.Item.AlertDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Footer" />

        <TextView
            android:id="@+id/ua_dialog_sms_success_message"
            style="@style/UrbanAirship.PreferenceCenter.Item.AlertDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Thank you, you are now opted-in for the SMS channel" />

        <TextView
            android:id="@+id/ua_dialog_sms_error_message"
            style="@style/UrbanAirship.PreferenceCenter.Item.AlertDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/design_default_color_error"
            android:text="There was a problem validating the phone number provided, please try again" />
    </LinearLayout>
</LinearLayout>
